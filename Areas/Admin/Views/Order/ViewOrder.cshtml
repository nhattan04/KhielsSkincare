@model IEnumerable<KhielsSkincare.Models.OrderDetail>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Order Detail";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Danh sách sản phẩm</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Order Code</th>
                        <th>User Name</th>
                        <th>Size</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Chỉnh sửa</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @*subtotal = item.Quantity + item.Price;
                        toatal += subtotal;*@
                        <tr>
                            <td>@item.OrderCode</td>
                            <td>@item.Size</td>
                            <td>@item.Price</td>
                                                       
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>