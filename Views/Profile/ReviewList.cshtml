@{
    Layout = "_Layout";
    ViewData["CurrentPage"] = "ReviewList";
}
@model List<KhielsSkincare.Models.Review>

<div style="background-color: #ededed;">
    <div class="container pt-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-black">Trang Chủ</a></li>
                <li class="breadcrumb-item activetext-black" aria-current="page">Cá nhân</li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-auto">
                @{
                    Html.RenderPartial("_NavigationProfile", ViewData["CurrentUser"]);
                }
            </div>
            <div class="col">
                <div class="bg-white mb-5" style="border-radius: 12px;">
                    <div class="pt-3 px-4 border-bottom">
                        <p class="fw-500">Lịch sử đánh giá</p>
                    </div>
                    <div class="px-4 pb-3">
                        @if (!Model.Any())
                        {
                            <p>Không có đánh giá nào.</p>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <a asp-action="Details" asp-controller="Product" asp-route-Id="@item.ProductId">
                                    <div class="border-bottom ">
                                        <div class="d-flex float-start align-items-center pe-2">
                                            <img src="~/images/product/@item.Product.ImageUrl" style="width: 80px; margin-right: 12px;" alt="@item.Product.ProductName" />
                                            <p class="m-0 fw-500" style="width: 300px;">Sản phẩm: @item.Product.ProductName</p>
                                        </div>
                                        <div class="mt-3" style="display: flow-root; width: -webkit-fill-available;">
                                            <div class="m-0 d-flex align-items-center">
                                                <div class="me-3">
                                                    <img class="mx-auto" style="width: 50px;" src="https://nhathuoclongchau.com.vn/estore-images/profile/v2/avatar-profile.svg">
                                                </div>
                                                <p class="m-0 fw-500">@item.Name<span class="fw-normal"> - @item.Rating <i class="fa-solid fa-star" style="color: #FFD43B;" aria-hidden="true"></i></span></p>
                                            </div>
                                            <p class="m-0" style="padding-left: 67px;">@item.Comment</p>
                                            <p style="text-align: right; font-size: 12px; margin: 0;"><em>@item.CreatedAt</em></p>
                                        </div>
                                    </div>
                                </a>
                            }
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>