                var rating = $(this).data('value');
                $('#rating').val(rating);

                // Tô màu cho các ngôi sao đã chọn
                $('.star').each(function () {
                    if ($(this).data('value') <= rating) {
                        $(this).addClass('selected');
                    } else {
                        $(this).removeClass('selected');
                    }
                });
            });          

