<h2>Chọn Hình Thức Thanh Toán</h2>
<form method="post" asp-action="ConfirmPayment">
    <div class="form-check">
        <input type="radio" class="form-check-input" id="paymentCash" name="paymentMethod" value="Tiền mặt" required />
        <label class="form-check-label" for="paymentCash">Tiền mặt</label>
    </div>
    <div class="form-check">
        <input type="radio" class="form-check-input" id="paymentOnline" name="paymentMethod" value="Chuyển khoản" />
        <label class="form-check-label" for="paymentOnline">Chuyển khoản</label>
    </div>
    <div class="form-check">
        <input type="radio" class="form-check-input" id="paymentCard" name="paymentMethod" value="Thẻ tín dụng" />
        <label class="form-check-label" for="paymentCard">Thẻ tín dụng</label>
    </div>
    <button type="submit" class="btn btn-primary">Xác Nhận Thanh Toán</button>
</form>
