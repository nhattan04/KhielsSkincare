                        <a href="https://policies.google.com/privacy" target="_blank" rel="noopener">Chính sách bảo mật</a> và
                        <a href="https://policies.google.com/terms" target="_blank" rel="noopener">Điều khoản dịch vụ</a>.
                    </div>
                    <button type="button" class="btn btn-outline-light mt-3 mb-3 w-50">GỞI</button>
                    <div class="icon-social">
                        <ul class="d-flex">
                            <li>
                                <a><i class="fa-brands fa-youtube"></i></a>
                            </li>
                            <li>
                                <a><i class="fa-brands fa-facebook-messenger"></i></a>
                            </li>
                            <li>
                                <a><i class="fa-brands fa-facebook"></i></a>
                            </li>
                            <li>
                                <a><i class="fa-brands fa-instagram"></i></a>
                            </li>
                            <li>
                                <a><i class="fa-brands fa-x-twitter"></i></a>
                            </li>
                            <li>
                                <a><i class="fa-brands fa-pinterest"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div>
                        <img style="width: 370px;" src="~/images/pasted-image-0.png" />
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/product.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/cart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>